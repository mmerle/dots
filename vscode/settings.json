{
  "breadcrumbs.enabled": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.accessibilitySupport": "off",
  "editor.autoClosingQuotes": "always",
  "editor.bracketPairColorization.enabled": false,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSurroundingLines": 5,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.find.addExtraSpaceOnTop": false,
  "editor.fontFamily": "'MD IO 0.5', SF Mono",
  "editor.fontLigatures": false,
  "editor.fontSize": 13,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.lineHeight": 22,
  "editor.matchBrackets": "never",
  "editor.minimap.enabled": false,
  "editor.padding.bottom": 20,
  "editor.padding.top": 20,
  "editor.renderLineHighlightOnlyWhenFocus": true,
  "editor.roundedSelection": false,
  "editor.scrollBeyondLastLine": false,
  "editor.smoothScrolling": true,
  "editor.tabSize": 2,
  "editor.wordWrap": "bounded",
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.decorations.badges": false,
  "explorer.openEditors.visible": 0,
  "extensions.ignoreRecommendations": true,
  "files.associations": {
    "*.js": "javascriptreact",
    "*.mdx": "markdown",
    "*.fish": "shellscript"
  },
  "files.exclude": {
    "**/node_modules": true
  },
  "files.simpleDialog.enable": true,
  "files.trimFinalNewlines": true,
  "git.autofetch": true,
  "git.countBadge": "tracked",
  "git.suggestSmartCommit": false,
  "search.exclude": {
    "**/node_modules": true,
    "**/.git": true
  },
  "telemetry.telemetryLevel": "off",
  "terminal.external.osxExec": "kitty.app",
  "terminal.integrated.defaultProfile.osx": "fish",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.lineHeight": 1.5,
  "terminal.integrated.tabs.enabled": false,
  "update.mode": "start",
  "window.title": "${activeEditorShort} ${separator} ${activeFolderShort}",
  "workbench.activityBar.visible": false,
  "workbench.colorTheme": "Flora",
  "workbench.editor.decorations.badges": false,
  "workbench.editor.decorations.colors": false,
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.fontAliasing": "auto",
  "workbench.iconTheme": "quill-icons",
  "workbench.layoutControl.enabled": false,
  "workbench.settings.enableNaturalLanguageSearch": false,
  "workbench.settings.useSplitJSON": true,
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "workbench.tree.indent": 18,
  "zenMode.fullScreen": false,

  // lang specific
  "css.validate": false,
  "css.lint.unknownAtRules": "ignore",
  "scss.lint.unknownAtRules": "ignore",
  "html.completion.attributeDefaultValue": "empty",
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[markdown]": {
    "editor.quickSuggestions": {
      "other": false,
      "strings": true
    }
  },

  // plugin specific
  "color-highlight.markRuler": false,
  "color-highlight.markerType": "underline",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "markdown": "html"
  },
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "vim.useSystemClipboard": true,
  "vim.highlightedyank.enable": true,
  "vim.history": 100,
  "vim.hlsearch": true,
  "vim.handleKeys": {
    "<c-d>": true
  },
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["p"],
      "commands": ["editor.action.clipboardPasteAction"]
    }
  ],
  "vim.vimrc.enable": true,
  "vim.vimrc.path": "$HOME/Developer/env/dots/vscode/init.vim"
}
