{
  "breadcrumbs.enabled": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.accessibilitySupport": "off",
  "editor.autoClosingQuotes": "always",
  "editor.bracketPairColorization.enabled": false,
  "editor.colorDecorators": false,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSurroundingLines": 5,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.find.addExtraSpaceOnTop": false,
  "editor.fontFamily": "'MD IO 0.6', SF Mono",
  "editor.fontLigatures": false,
  "editor.fontSize": 13,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.guides.indentation": false,
  "editor.lineHeight": 22,
  "editor.lineNumbers": "relative",
  "editor.matchBrackets": "never",
  "editor.minimap.enabled": false,
  "editor.padding.bottom": 20,
  "editor.padding.top": 20,
  "editor.renderLineHighlightOnlyWhenFocus": true,
  "editor.roundedSelection": false,
  "editor.scrollBeyondLastLine": false,
  "editor.tabSize": 2,
  "editor.wordWrap": "off",
  "editor.wordWrapColumn": 120,
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.decorations.badges": false,
  "explorer.openEditors.visible": 0,
  "extensions.ignoreRecommendations": true,
  "files.associations": {
    "*.js": "javascriptreact",
    "*.mdx": "markdown",
    "*.fish": "shellscript"
  },
  "files.exclude": {
    "**/node_modules": true
  },
  "files.simpleDialog.enable": true,
  "files.trimFinalNewlines": true,
  "git.autofetch": true,
  "git.countBadge": "tracked",
  "git.suggestSmartCommit": false,
  "search.exclude": {
    "**/node_modules": true,
    "**/.git": true
  },
  "security.workspace.trust.enabled": false,
  "security.workspace.trust.untrustedFiles": "open",
  "telemetry.telemetryLevel": "off",
  "terminal.external.osxExec": "kitty.app",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.defaultProfile.osx": "fish",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.lineHeight": 1.5,
  "terminal.integrated.tabs.enabled": false,
  "update.mode": "start",
  "window.title": "${activeEditorShort} ${separator} ${activeFolderShort}",
  "workbench.activityBar.visible": false,
  "workbench.colorTheme": "Flora",
  "workbench.editor.decorations.colors": false,
  "workbench.editor.decorations.badges": false,
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.fontAliasing": "auto",
  "workbench.iconTheme": null,
  "workbench.layoutControl.enabled": false,
  "workbench.settings.enableNaturalLanguageSearch": false,
  // "workbench.settings.useSplitJSON": true,
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "workbench.tree.indent": 18,
  "zenMode.fullScreen": false,

  // lang specific
  "css.validate": false,
  "css.lint.unknownAtRules": "ignore",
  "scss.lint.unknownAtRules": "ignore",
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[markdown]": {
    "editor.quickSuggestions": {
      "other": false,
      "strings": true
    }
  },
  "svelte.enable-ts-plugin": true,
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },

  // plugin specific
  "color-highlight.markRuler": false,
  "color-highlight.markerType": "underline",
  "color-highlight.matchRgbWithNoFunction": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "markdown": "html"
  },
  "emmet.triggerExpansionOnTab": true,
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "html.completion.attributeDefaultValue": "empty",
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "prettier.printWidth": 120,
  "vscode-neovim.logOutputToConsole": true,
  "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim"
}
