[
  // global
  {
    "bindings": {
      "ctrl-j": "menu::SelectNext",
      "ctrl-k": "menu::SelectPrevious",
      "ctrl-enter": "workspace::ToggleZoom"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "cmd-shift-g": "git_panel::ToggleFocus",
      "cmd-shift-b": "workspace::ToggleRightDock"
    }
  },
  // pane navigation
  {
    "context": "Editor && vim_mode == normal || Dock",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight"
    }
  },
  // completion menus
  {
    "context": "Editor && (showing_code_actions || showing_completions)",
    "bindings": {
      "ctrl-j": "editor::ContextMenuNext",
      "ctrl-k": "editor::ContextMenuPrevious",
      "ctrl-y": "editor::ConfirmCompletionReplace"
    }
  },
  // misc
  {
    "context": "VimControl && !menu",
    "bindings": {
      "g m": "vim::Matching"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "space s": "workspace::Save",
      "space S": "workspace::SaveAll",
      "space x": "editor::Format",
      "space p": "file_finder::Toggle",
      "space /": "pane::DeploySearch",
      "space w": "pane::CloseActiveItem"
    }
  }
]
