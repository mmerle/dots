[
  {
    "label": "LazyGit",
    "command": "lazygit",
    "hide": "on_success",
    "reveal_target": "center",
    "allow_concurrent_runs": false,
    "use_new_terminal": true,
  },
  {
    "label": "LazyGit File History",
    "command": "lazygit",
    "args": ["-f", "\"$ZED_FILE\""],
    "hide": "on_success",
    "reveal_target": "center",
    "allow_concurrent_runs": false,
    "use_new_terminal": true,
  },
  {
    "label": "Live Grep",
    "command": "zed \"$(tv text)\"",
    "shell": {
      "program": "sh",
    },
    "hide": "always",
    "reveal_target": "center",
    "allow_concurrent_runs": true,
    "use_new_terminal": true,
  },
]
