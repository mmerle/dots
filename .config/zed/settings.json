{
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "buffer_font_family": "MD IO Variable",
  "buffer_font_size": 13,
  "tab_size": 2,
  "theme": {
    "mode": "system",
    "dark": "Min Dark (Solid)",
    "light": "Min Light (Solid)",
  },
  "use_smartcase_search": true,
  // formatting
  "soft_wrap": "editor_width",
  "preferred_line_length": 80,
  "format_on_save": "on",
  "ensure_final_newline_on_save": true,
  // ui
  "cursor_blink": false,
  "rounded_selection": false,
  "use_system_path_prompts": false,
  "show_whitespaces": "trailing",
  "inline_code_actions": false,
  "scrollbar": {
    "show": "never",
  },
  "sticky_scroll": {
    "enabled": true,
  },
  "file_finder": {
    "file_icons": false,
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
  },
  "tabs": {
    "file_icons": false,
    "git_status": false,
  },
  "minimap": {
    "show": "never",
  },
  "active_pane_modifiers": {
    "inactive_opacity": 0.85,
  },
  "debugger": {
    "button": false,
  },
  "git": {
    "path_style": "file_name_first",
    "inline_blame": {
      "enabled": false,
    },
  },
  "search": {
    "button": false,
  },
  "terminal": {
    "button": false,
    "copy_on_select": true,
    "shell": "system",
    "line_height": "comfortable",
  },
  "toolbar": {
    "code_actions": false,
    "agent_review": false,
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false,
  },
  "title_bar": {
    "show_branch_icon": true,
    "show_user_picture": false,
  },
  // vim
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true,
    "use_system_clipboard": "always",
    "use_smartcase_find": true,
  },
  // llm
  "features": {
    "edit_prediction_provider": "none",
  },
  "context_servers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
    },
    "figma": {
      "settings": {},
      "url": "http://127.0.0.1:3845/mcp",
    },
    "astro-docs": {
      "settings": {},
      "url": "https://mcp.docs.astro.build/mcp",
    },
    "chrome-devtools": {
      "command": "npx",
      "args": [
        "-y",
        "chrome-devtools-mcp@latest",
        "--channel=canary",
        "--headless=true",
      ],
    },
  },
  "agent": {
    "dock": "right",
    "use_modifier_to_send": true,
    "default_model": {
      "provider": "openai",
      "model": "gpt-5.1",
    },
    "inline_assistant_model": {
      "provider": "openai",
      "model": "gpt-5.1",
    },
    "commit_message_model": {
      "provider": "openai",
      "model": "gpt-5-nano",
    },
  },
  // panels
  "project_panel": {
    "auto_fold_dirs": false,
    "dock": "right",
    "starts_open": false,
    "entry_spacing": "standard",
    "indent_size": 12.0,
    "hide_root": true,
    "file_icons": false,
    "folder_icons": false,
    "show_diagnostics": "off",
  },
  "git_panel": {
    "tree_view": false,
    "status_style": "icon",
    "dock": "right",
    "collapse_untracked_diff": false,
    "sort_by_path": false,
  },
  "outline_panel": {
    "dock": "right",
    "indent_size": 12.0,
    "folder_icons": false,
    "file_icons": false,
  },
  "collaboration_panel": {
    "button": false,
  },
  "notification_panel": {
    "button": false,
  },
  // filetypes
  "file_types": {
    "Markdown": [".mdx", ".mdoc"],
    "JSONC": [".json"],
    "HTML": [".svg"],
  },
  // lang specific
  "languages": {
    "SCSS": {
      "tab_size": 4,
    },
    "Twig": {
      "tab_size": 4,
    },
  },
  // profiles
  "profiles": {
    "work": {
      "tab_size": 4,
      "soft_wrap": "none",
      "preferred_line_length": 100,
      "format_on_save": "off",
      "ensure_final_newline_on_save": true,
    },
  },
}
